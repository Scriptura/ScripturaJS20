form(method='get' action='./').grid2.gap
  fieldset
    legend Label & Inputs
    p
      code .input label + input
    .input
      label(for='name') Type text
      input#name(type='text' name='name' value='' size='23' placeholder='John' required='')
    .input.invalid
      label(for='name2') Text + error
      input#name2(type='text' name='name2' value='' size='23' placeholder='Smith' required='')
      p
        svg
          use(xlink:href='/medias/sprites/utils.svg#warning')
        span Champ invalide&nbsp;: des caractères numériques sont placés dans votre nom.
    .input.disabled
      label(for='name3') Disabled Attribute
      input#name3(type='text' name='name3' value='' size='23' placeholder=':disabled' required='' disabled='')
    .input
      label(for='email') Type email
      input#email(type='email' name='email' value='' size='23' placeholder='pseudo@email.com' required='')
    .input
      label(for='tel') Type tel
      input#tel(type='tel' name='tel' value='' size='23' placeholder='0477446677')
  fieldset
    legend Dates & time
    .input
      label(for='date') Type date
      input(type='date' name='date' value='2015-02-12')
    .input
      label(for='time') Type time
      input(type='time' name='time')
    .input
      label(for='datetime') Type datetime
      input(type='datetime' name='datetime')
  fieldset
    legend Other
    .input
      label(for='number') Type number
      input(type='number' name='number' step='1' min='-5' max='100' value='50')
    .input
      label(for='color') Type color
      input(type='color' name='color' value='#5ae310')
    .input
      label(for='password') Type password
      input(type='password' id='user_password' name='password' placeholder='• • • • • • • •')
    .input
      label(for='file') Type file
      input(type='file' name='file' size='23')
    .input.hidden
      label(for='test') Type hidden
      input#test(type='text' name='test' value='' size='23' placeholder='requis')
  fieldset
    legend Select & Textarea
    p
      code .input label + select
    .input
      label(for='pays') Type select
      select#pays(name='pays')
        option(value='00' selected='') Pays
        option(value='FR') France
        option(value='ZA') Afrique du Sud
        option(value='AL') Albanie
        option(value='DZ') Algérie
        option(value='DE') Allemagne
        option(value='AD') Andorre
        option(value='AO') Angola
        option(value='AI') Anguilla
        option(value='AQ') Antarctique
        option(value='AG') Antigua-et-Barbuda
        option(value='AN') Antilles néerlandaises
    .input
      label(for='pays2') Type select multiple
      select#pays2(multiple name='pays2')
        option(value='00' selected='') Pays
        option(value='FR') France
        option(value='ZA') Afrique du Sud
        option(value='AL') Albanie
        option(value='DZ') Algérie
        option(value='DE') Allemagne
        option(value='AD') Andorre
        option(value='AO') Angola
        option(value='AI') Anguilla
        option(value='AQ') Antarctique
        option(value='AG') Antigua-et-Barbuda
        option(value='AN') Antilles néerlandaises
    p
      code .input label + textarea
    .input
      label(for='message') Textarea
      textarea#message(name='message' placeholder='Bonjour...' required='')
p
  code .search
form(role='search' method='get' action='./')
  fieldset.search
    input(type='search' name='s' placeholder='Rechercher' required='')
    label(accesskey='s') Rechercher
    button
      span.icon-search
      span Valider
