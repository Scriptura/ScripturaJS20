          label(for='email') Type email
          input#email(type='email' name='email' value='' size='23' placeholder='pseudo@email.com' required='')
        .input
          label(for='tel') Type tel
          input#tel(type='tel' name='tel' value='' size='23' placeholder='0477446677')
        .input
          label(for='date') Type date
          input(type='date' name='date' value='2015-02-12')
        .input
          label(for='time') Type time
          input(type='time' name='time')
        .input
          label(for='datetime') Type datetime
          input(type='datetime' name='datetime')
        .input.c2
          label(for='number') Type number
          input(type='number' name='number' step='1' min='-5' max='100' value='50')
        .input
          label(for='color') Type color
          input(type='color' name='color' value='#5ae310')
        .input
          label(for='password') Type password
          input(type='password' id='user_password' name='password' placeholder='• • • • • • • •')
        .input.c2
          label(for='file') Type file
          input#tel(type='file' name='file' size='23')
        .input.hidden
          label(for='test') Type hidden
          input#test(type='text' name='test' value='' size='23' placeholder='requis')
