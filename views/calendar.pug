extends layout

block main
  main
    h1.h2= _name
    p
      if _calendarColor
        span(style='display:inline-block;height:1.1rem;width:1.1rem;margin:0 .5rem -1px 0;background-color:' + _calendarColor)
      if _calendarColor2
        span(style='display:inline-block;height:1.1rem;width:1.1rem;margin:0 .5rem -1px 0;background-color:' + _calendarColor2)
      if _calendar && _calendarUrl
        a(href=_calendarUrl)!= _calendarName
      else if _calendarName
        span!= _calendarName
      else
        span no calendar
    if _calendarGrade
      p
        em= _calendarGrade
    if _calendarRank
      p
        em= _calendarRank
    div= _moonPhaseImg
    if _moonPhase
      .moon(style='width:2.5rem;height:2.5rem;margin: 0 0 .5rem -.3rem')
        style.
          .moon svg circle {
            stroke: Tan;
          }
          .moon svg path {
            fill: Tan;
          }
        if _moonPhase == 0
          //- style spécifique à cette image SVG :
          style.
            .moon svg circle {
              fill: Peru;
            }
          include ../public/medias/images/moons/0.svg
        if _moonPhase == 1
          include ../public/medias/images/moons/1.svg
        if _moonPhase == 2
          include ../public/medias/images/moons/2.svg
        if _moonPhase == 3
          include ../public/medias/images/moons/3.svg
        if _moonPhase == 4
          include ../public/medias/images/moons/4.svg
        if _moonPhase == 5
          include ../public/medias/images/moons/5.svg
        if _moonPhase == 6
          include ../public/medias/images/moons/6.svg
        if _moonPhase == 7
          include ../public/medias/images/moons/7.svg
