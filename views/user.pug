extends layout

block main
  main
    h1= _display_name
    ul
      li Id : #{_id}
      li Username : #{_username}
      li Password : #{_password}
      if _email
        li Email : #{_email}
      li Inscrit depuis le : #{_creation}
      if _revision
        li Dernière revision du profil le : #{_revision}
      if _last_login
        li Dernière connexion le : #{_last_login}
    hr
    ul.list-stripe-large-links.summary
      li
        a(href='/user/admin') User admin
      li
        a(href='/user/test') User test (request failed)
      li
        a(href='/user/123') User xyz (incorrect path)
