extends layout

block main
  main
    h1.title= _name
    p!= _content
      figure.figure-focus-thumbnail
        - var img = '/medias/images/demo/OldMechanism'
        - var alt = 'Old Mechanism'
        include helpers/picture
    ul
      li Description : #{_description}
      li
        em
          | Article créé le #{_creation}
          if _revision
            |, révisé le #{_revision}
          |.
