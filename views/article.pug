extends layout

block main
  main
    h1.h2= _name
    p!= _content
    - var img = '/medias/images/demo/LotusMacro'
    - var alt = 'Lotus'
    figure
      picture
        source(media='(min-width: 2000px)' srcset=img + '.jpg, ' + img + '.jpg 2x' sizes='100vw')
        source(media='(min-width: 1500px)' srcset=img + '2000.jpg, ' + img + '.jpg 2x' sizes='100vw')
        source(media='(min-width: 1000px)' srcset=img + '1500.jpg, ' + img + '2000.jpg 2x' sizes='100vw')
        source(media='(min-width: 800px)' srcset=img + '1000.jpg, ' + img + '2000.jpg 2x' sizes='100vw')
        source(media='(min-width: 600px)' srcset=img + '800.jpg, ' + img + '1500.jpg 2x' sizes='100vw')
        source(media='(min-width: 400px)' srcset=img + '600.jpg, ' + img + '1000.jpg 2x' sizes='100vw')
        source(media='(min-width: 300px)' srcset=img + '400.jpg, ' + img + '800.jpg 2x' sizes='100vw')
        source(srcset=img + '300.jpg' sizes='100vw')
        img(src=img + '.jpg' alt=alt)
    p
      em
        | Article créé le #{_creation}
        if _revision
          |, révisé le #{_revision}
        |.
    ul
      li Title : #{_title}
      li Meta description : #{_description}
    include includes/links
