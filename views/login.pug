extends layout

block main
  main
    h1.h2= _name
    form(action='/login' method='post')
      .input
        label Username :
        input(type='text' name='username' placeholder='user' autocorrect='off' autocapitalize='off' spellcheck='false')
      .input
        label Password :
        input#test(type='password' name='password' placeholder='• • • • • • • •')
        a.see-password(href='#')
      div
        button.button Se connecter
      //- attribute html5: required='required'
      include includes/links
