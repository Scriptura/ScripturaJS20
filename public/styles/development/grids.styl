// @documentation minmax(0, 1fr) @see https://css-tricks.com/equal-width-columns-in-css-grid-are-kinda-weird/

[class*=grid]
  display grid
  grid-auto-flow dense

[class*=grid].gap
  gap _gap

[class*=grid].vertical-gap
  gap 0 _gap

@media (max-width _sizeXS)

  .sizeXS-grid2
    grid-template-columns repeat(2, minmax(0, 1fr))

@media (min-width _sizeXS)

  .grid2
  .grid3
  .grid4
    grid-template-columns repeat(2, minmax(0, 1fr))

@media (min-width _sizeS)

  .sizeS-grid2
    grid-template-columns repeat(3, minmax(0, 1fr)) !important

  .grid3
  .grid4
    grid-template-columns repeat(3, minmax(0, 1fr))

@media (min-width _sizeL)

  .grid4
    grid-template-columns repeat(4, minmax(0, 1fr))

@media (min-width _sizeXS)

  .c2
  .c3
  .c4
    grid-column span 2

@media (min-width _sizeS)

  .c3
  .c4
    grid-column span 3

@media (min-width _sizeL)

  .c4
    grid-column span 4

.r2
  grid-row span 2

.r3
  grid-row span 3

.r4
  grid-row span 4


