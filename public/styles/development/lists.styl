_colorAdd11 = darken(_colorG, 34%)
_colorAdd12 = lighten(_colorAdd1, 50%)

[class*=list]
[class*=list] > *
  padding-left 0

[class*=list] li
  display block

[class*=list-stripe]
  margin 0 // @note Si éléments <ul> ou <ol>

//:root [class*=list-stripe] > *
//  margin-bottom 1em // @bugfix Problème d'interprétation avec unité rem @affected Chrome.

:root [class*=list-stripe]:not([class*=-links]) > *
.list-stripe-links a
  padding .3em 1em

:root [class*=list-stripe-large]:not([class*=-links]) > *
.list-stripe-large-links a
  padding .5em 1em

[class*=list-stripe] > *
  background-color _colorAdd11
  background-image linear-gradient(to left, rgba(0, 0, 0, .1) , rgba(255, 255, 255, .025))
  box-shadow .5em .5em 2em rgba(0, 0, 0, .1)

[class*=-links] li
  padding 0

[class*=-links] a
  display block
  text-decoration none
  color _colorAdd1 //inherit

[class*=-links] a:focus
[class*=-links] a:hover
[class*=-links] a:active
  color #fff
  background-color _color1
  box-shadow .5em .5em 2em rgba(0, 0, 0, .25)
  outline none
  animation animList .05s ease-in-out

[class*=-links] svg
  width 1.1em
  height 1.1em
  display inline-block
  margin-right .5em
  vertical-align sub

@keyframes animList
  to
    transform scale(1.03) translateZ(0)
