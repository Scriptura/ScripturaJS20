// @subsection Lists
// -----------------------------------------------------------------------------

[class*=list]
[class*=list] > *
  padding-left 0

[class*=list] li
  display block

[class*=list-stripe]
  margin 0 // @note Si éléments <ul> ou <ol>

:root [class*=list-stripe] > *
  margin .5em 0 // @bugfix Problème d'interprétation avec unité rem @affected Chrome.

:root [class*=list-stripe]:not([class*=-links]) > *
.list-stripe-links a
  padding .3em 1em

:root [class*=list-stripe-large]:not([class*=-links]) > *
.list-stripe-large-links a
  padding .5em 1em

[class*=list-stripe] > *
  background-color lighten(_color0, 10%)
  box-shadow .5rem .5rem 2rem rgba(0, 0, 0, .1)

[class*=-links] li
  padding 0

[class*=-links] a
  display block
  text-decoration none
  color inherit

[class*=-links] a:focus
[class*=-links] a:hover
[class*=-links] a:active
  background-color Orange
  box-shadow .5rem .5rem 2rem rgba(0, 0, 0, .25)
  outline none
  animation animList .1s ease-in-out

[class*=-links] svg
  width 1.1rem
  height 1.1rem
  display inline-block
  margin-right .5rem
  vertical-align sub

@keyframes animList
  50%
    transform scale(1.03) translateZ(0)
