[class^=columns]
  column-gap 0

[class^=columns] > *
  display inline-block
  width 100%
  word-wrap break-word

@media (min-width _sizeXS)

  .columns2
  .columns3
  .columns4
    column-count 2

  .columns5
  .columns6
    column-count 3

@media (min-width _sizeS)

  .columns3
  .columns4
    column-count 3

  .columns5
  .columns6
    column-count 4

@media (min-width _sizeL)

  .columns4
    column-count 4

  .columns5
    column-count 5

  .columns6
    column-count 6

[class^=columns].gap
  column-gap _gap

[class^=columns].gap > *
  margin-bottom _gap

@media (min-width _sizeXS)

  [class^=columns].sizeSgap
    column-gap _gap

  [class^=columns].sizeSgap > *
    margin-bottom _gap
