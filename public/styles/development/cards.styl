.card
  position relative
  padding 2em
  color _colorAdd1
  background-color darken(_color0, 20%)
  border-radius .5em
  box-shadow 0 0 2rem rgba(0, 0, 0, .1)

.card::before
.card::after
  content ''
  z-index -1
  position absolute
  bottom 2em
  left 1em
  width 80%
  height 1.5em
  max-width 30em
  box-shadow 0 1.5rem 2rem rgba(0, 0, 0, .4)
  transform rotate(-3deg) translateZ(0)

.card::after
  right 1em
  left auto
  transform rotate(3deg)

