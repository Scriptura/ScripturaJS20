// @description Défilement vers le haut

.scroll-top
  //display none // @note apparition de l'élément au scrool de la page via JS
  position fixed
  bottom 0
  right 0
  z-index 4000
  height 3em
  width 3em
  background-color transparent
  border none
  outline none

.scroll-top.hide
  display none

.scroll-top svg
  height 2em
  width 2em
  fill #000
  opacity .5

.scroll-top:focus svg
.scroll-top:hover svg
.scroll-top:active svg
  fill #aaa
