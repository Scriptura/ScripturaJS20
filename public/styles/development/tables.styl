_tablesSize = 5px
_tablesColor = #444
_tablesColor2 = _color2
_tablesColor3 = darken(_colorG, 34%) //rgba(255, 255, 255, .05)

.table
  width 100%
  text-align left
  font-weight normal
  word-wrap break-word
  background-color _tablesColor
  border-collapse collapse // separate
  //border-spacing .2em
  box-shadow .5rem .5rem 2rem rgba(0, 0, 0, .15)
  & th
    font-weight normal
  & th
  & td
    vertical-align top
    padding .5em 1em
    box-shadow inset 0 0 1px #444
  & thead th
    position sticky
    top 0
    z-index 1
    background-color _tablesColor2
  & tfoot
    background-color _tablesColor3
  & tbody tr:nth-child(even)
    background-color rgba(255, 255, 255, .05)
  & tbody :empty
    background-image repeating-linear-gradient(-45deg, transparent 0 _tablesSize, rgba(255, 255, 255, .05) _tablesSize _tablesSize * 2)

.table.layout-fixed
  table-layout fixed

.table.firstcolumn tbody td:first-child
  background-color _tablesColor3
