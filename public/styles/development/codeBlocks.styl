  transition color .5s ease-in-out

.pre code:focus-within
  color _colorW

.pre div
  position absolute
  display block
  top 1em
  right 1em
  font-size 1em
  color #777

.pre svg
  width 1em
  height 1em
  fill #777

.pre div span
  margin-left .5em

.pre button
  position absolute
  bottom 1em
  right 1em
  padding 0
  border none
  color #777
  background-color transparent

.pre button:focus
.pre button:hover
.pre button:active
  color Orange
  outline none

