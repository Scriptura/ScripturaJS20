_buttonsColor1 = _color2
_buttonsColor2 = rgba(205, 133, 63, .5) // peru
_buttonsColor3 = sienna

// @note Toujours privilégier l'élément <button> sur l'élément <input type=button> car il permet de réaliser des rendus plus complexe en acceptant des balises html.

.button
  overflow hidden
  margin-bottom 1em
  padding 0 1em
  line-height 2
  //font-weight 300
  white-space nowrap
  text-overflow ellipsis
  color #fff
  background-color _buttonsColor1
  outline 0
  border .5em solid _buttonsColor1
  box-shadow 0 .5em 2em rgba(0, 0, 0, .3)
  background-image linear-gradient(to top, rgba(0, 0, 0, .1), rgba(255 ,255, 255, .05))
  //border-radius _r4
  transition translateZ .1s linear
  &:focus
  &:hover
    box-shadow 0 .5em 2em rgba(0, 0, 0, .3)
    transform translate(0, -.1rem)
  &:active
    box-shadow 0 0 0 #000
    transform translate(.1em, .1em)
  &:focus-visible // @see https://css-tricks.com/almanac/selectors/f/focus-visible/
    background-color Orange
    border-color Orange

