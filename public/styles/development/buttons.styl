.round-button
  display flex
  padding .3em
  font-family 'Open Sans', sans-serif
  font-size 1em // @note Modifier la taille du boutton avec la classe utilitaire .zoom
  color _buttonsColor2
  background-color _buttonsColor3
  background-image linear-gradient(-45deg, rgba(55, 55, 55, .4), rgba(0, 0, 0, .0), rgba(55, 55, 55, .4))
  border .25em solid _buttonsColor2
  border-radius 50%
  box-shadow inset 0 0 .1em rgba(0, 0, 0, .3), 0 .5rem 2rem rgba(0, 0, 0, .3) // ombres exterieures en rem
  transform translate(0, 0)
  cursor pointer
  outline none
  transition all .2s linear
  transition-property translate box-shadow
  &:focus
  &:hover
    color orange
    border-color orange
    transform translateY(-.1rem) // en rem
  &:active
    box-shadow 0 .5rem 2rem rgba(0, 0, 0, 0)
    transform translateY(.05em)
  &::before
    content ''
    display inline-block
    vertical-align middle
    padding-top 100%
  & *
    margin auto
  & svg
    height 1em
    width 1em
    fill _buttonsColor2
